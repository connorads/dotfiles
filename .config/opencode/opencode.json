      "yarn run format *": "allow",
      "yarn run preview *": "allow",
      "yarn run fix *": "allow",
      "pytest *": "allow",
      "ruff check *": "allow",
      "ruff format *": "allow",
      "uv sync *": "allow",
      "uv run pytest *": "allow",
      "uv run ruff check *": "allow",
      "uv run ruff format *": "allow",
      "gh pr view *": "allow",
      "gh pr list *": "allow",
      "gh pr diff *": "allow",
      "gh repo list *": "allow",
      "gh search *": "allow",
      "brew audit *": "allow",
      "aws configure list-profiles": "allow",
      "aws sts get-caller-identity *": "allow",
      "aws appconfig list-applications *": "allow",
      "aws appconfig list-environments *": "allow",
      "aws appconfig list-configuration-profiles *": "allow",
      "aws appconfig list-deployments *": "allow",
      "aws appconfig get-configuration *": "allow",
      "aws appconfig get-hosted-configuration-version *": "allow",
      "aws events list-rules *": "allow",
      "aws events list-targets-by-rule *": "allow",
      "aws lambda list-functions *": "allow",
      "aws lambda list-event-source-mappings *": "allow",
      "aws iam list-attached-role-policies *": "allow",
      "aws iam list-role-policies *": "allow",
      "aws iam get-role-policy *": "allow",
      "aws sqs get-queue-attributes *": "allow",
      "aws sqs list-queues *": "allow",
      "aws logs filter-log-events *": "allow",
      "aws logs get-log-events *": "allow",
      "aws logs start-query *": "allow",
      "aws logs get-query-results *": "allow",
      "granted ls": "allow",
      "assume *": "allow",
      "mise use *": "allow",
      "rm -rf /": "deny",
      "eval *": "deny"
    },
    "webfetch": "allow",
    "edit": "allow",
    "external_directory": "ask"
  },
  "plugin": [
    "opencode-openai-codex-auth@4.0.2",
    "opencode-gemini-auth@1.1.6"
  ],
  "tui": {
    "scroll_speed": 10
  },
  "agent": {
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      "model": "openai/gpt-5.1-codex-max-high",
      "prompt": "You are a code reviewer. Focus on correctness, maintainability, and security.",
      "tools": {
        "write": false,
        "edit": false
      }
    }
  },
  "provider": {
    "openai": {
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      },
      "models": {
        "gpt-5.1-codex-low": {
          "name": "GPT 5.1 Codex Low (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "options": {
            "reasoningEffort": "low",
            "reasoningSummary": "auto",
            "textVerbosity": "medium",
            "include": [
              "reasoning.encrypted_content"
            ],
            "store": false
          }
        },
        "gpt-5.1-codex-medium": {

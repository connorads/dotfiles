# skill: install skills to preferred agents
# usage: skill owner/repo [skill-name...]
if [[ $# -lt 1 ]]; then
  echo "usage: skill owner/repo [skill-name...]" >&2
  return 1
fi
local repo="$1"; shift
local agents=(
  -a amp
  -a antigravity
  -a claude-code
  -a codex
  -a cursor
  -a gemini-cli
  -a github-copilot
  -a kiro-cli
  -a opencode
)
if [[ $# -gt 0 ]]; then
  skills add "$repo" -s "$@" "${agents[@]}" -g -y
else
  skills add "$repo" "${agents[@]}" -g
fi

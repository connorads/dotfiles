# take: clone repo, extract URL archive, or make directory and cd
emulate -L zsh

if [[ $# -eq 0 ]]; then
  print -u2 "usage: take <git-url|archive-url|dir> [dir ...]"
  return 1
fi

if [[ $1 =~ ^(https?|ftp).*\.(tar\.(gz|bz2|xz)|tgz)$ ]]; then
  takeurl "$1"
elif [[ $1 =~ ^(https?|ftp).*\.(zip)$ ]]; then
  takezip "$1"
elif [[ $1 =~ ^([A-Za-z0-9]\+@|https?|git|ssh|ftps?|rsync).*\.git/?$ ]]; then
  takegit "$1"
else
  takedir "$@"
fi
